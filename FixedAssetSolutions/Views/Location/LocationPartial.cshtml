                                        <div class="box-header" style="border-bottom: 1px solid #e5e5e5;">
                                            <h3 class="box-title">Options</h3>
                                        </div>
                                        <div class="box-body">
                                            <div class="col-md-12">
                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        <label for="exampleInputEmail1">Default Unit of Measure</label>
                                                        <input type="email" class="form-control" id="exampleInputEmail1" placeholder="Enter Name">
                                                    </div>
                                                </div>
                                                <div class="col-md-12">
                                                    <div class="checkbox" style="margin-top: 20px;">
                                                        <label>
                                                            <input type="checkbox"> Multiple Sites
                                                        </label>
                                                    </div>
                                                </div>
                                                <div class="col-md-12">
                                                    <div class="checkbox" style="margin-top: 20px;">
                                                        <label>
                                                            <input type="checkbox"> Log Balance in History
                                                        </label>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>*@
                            </div>
                            <div class="col-md-6">
                                <div class="box">
                                    <div class="box-header" style="border-bottom: 1px solid #e5e5e5;">
                                        <h3 class="box-title">Contact Info</h3>
                                    </div>
                                    <div class="box-body">
                                        <div class="col-md-12">
                                            <div class="col-md-12">
                                                <div class="form-group">
                                                    <label for="exampleInputEmail1">Contact Name</label>
                                                    @Html.EditorFor(model => model.ContactName, new { htmlAttributes = new { @class = "form-control" } })
                                                </div>
                                            </div>
                                            <div class="col-md-12">
                                                <div class="form-group">
                                                    <label for="exampleInputEmail1">Contact Phone</label>
                                                    @Html.EditorFor(model => model.ContactPhone, new { htmlAttributes = new { @class = "form-control" } })
                                                </div>
                                            </div>
                                            <div class="col-md-12">
                                                <div class="form-group">
                                                    <label for="exampleInputEmail1">Contact Fax</label>
                                                    @Html.EditorFor(model => model.ContactFax, new { htmlAttributes = new { @class = "form-control" } })
                                                </div>
                                            </div>
                                            <div class="col-md-12">
                                                <div class="form-group">
                                                    <label for="exampleInputEmail1">Contact Email</label>
                                                    @Html.EditorFor(model => model.ContactEmail, new { htmlAttributes = new { @class = "form-control" } })
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="box">
                                    <div class="box-header" style="border-bottom: 1px solid #e5e5e5;">
                                        <h3 class="box-title">Logo</h3>
                                    </div>
                                    <div class="box-body">
                                        <div class="col-md-12">
                                            <div class="col-md-12">
                                                <img id="blah" src="#" alt="your image" style="height: 74px;" />
