<script>


    Table = $("#table2excel").DataTable({
        data: [],
        columns: [
             { data: 'BarCode', className: 'text-center' },
             { data: 'AssetDescription', className: 'text-center' },
             { data: 'RoomNo', className: 'text-center' },
             {
                 data: "RoomCountNew",
                 render: function (data, type, row) {

                     if (data == '0') {
                         return "<label>Verified</label>";
                     }
                     else {
                         return "<label>Un-Verified</label>";
                     }
                     return data;
                 }
             },
             //{ data: 'RoomCountOld', className: 'text-center' },
             //{ data: 'RoomCountNew', className: 'text-center' },
             { data: 'RoomCount', className: 'text-center' }

        ],
        dom: 'Bfrtip',
        "pageLength": 100,
        buttons: [{
            extend: 'excelHtml5',
            text: 'Export to Excel',
            exportOptions: {
                columns: ':visible:not(.not-export-col)'
            },
            //customize: function (xlsx) {
            //    var sheet = xlsx.xl.worksheets['sheet16.xml'];
            //    // jQuery selector to add a border
            //    $('row c[r*="10"]', sheet).attr('s', '25');
            //}
            customize: function (xlsx) {
                var sheet = xlsx.xl.worksheets['sheet1.xml'];
                var downrows = 3;
                var clRow = $('row', sheet);
                //update Row
                clRow.each(function () {
                    var attr = $(this).attr('r');
                    var ind = parseInt(attr);
                    ind = ind + downrows;
                    $(this).attr("r", ind);
                });

                // Update  row > c
                $('row c ', sheet).each(function () {
                    var attr = $(this).attr('r');
                    var pre = attr.substring(0, 1);
                    var ind = parseInt(attr.substring(1, attr.length));
                    ind = ind + downrows;
                    $(this).attr("r", pre + ind);
                });

                function Addrow(index, data) {
                    msg = '<row r="' + index + '">'
                    for (i = 0; i < data.length; i++) {
                        var key = data[i].k;
                        var value = data[i].v;
                        msg += '<c t="inlineStr" r="' + key + index + '" s="42">';
                        msg += '<is>';
                        msg += '<t>' + value + '</t>';
                        msg += '</is>';
                        msg += '</c>';
                    }
                    msg += '</row>';
                    return msg;
                }
                var locat = $("#Location option:selected").text();
                //insert

                var D = new Date();
                //  D.format('dd/MM/yyyy hh:mm TT');

                //insert
                var r1 = Addrow(1, [{ k: 'A', v: 'Location Name' }, { k: 'B', v: locat }, { k: 'C', v: 'Generated by Matrix FAS' }]);  //Addrow(1, [{ k: 'A', v: 'Matrix Fixed Asset Solution' }]);
                var r2 = Addrow(2, [{ k: 'A', v: 'Report Name' }, { k: 'B', v: 'Reconcilation Report by Room No' }, { k: 'C', v: D }]);
                //var r3 = Addrow(3, [{ k: 'A', v: 'Location Name' }, { k: 'B', v: locat }]);
                sheet.childNodes[0].childNodes[1].innerHTML = r1 + r2 + sheet.childNodes[0].childNodes[1].innerHTML;

                //var r1 = Addrow(1, [{ k: 'A', v: 'Matrix Fixed Asset Solution' }]);
                //var r2 = Addrow(2, [{ k: 'A', v: 'Report Name' }, { k: 'B', v: 'Asset Search Report' }]);
                //var r3 = Addrow(3, [{ k: 'A', v: 'Location Name' }, { k: 'B', v: locat }]);
                //sheet.childNodes[0].childNodes[1].innerHTML = r1 + r2 + r3 + sheet.childNodes[0].childNodes[1].innerHTML;

            }
        }],
        rowCallback: function (row, data) {
            if (data.Status == "DISPOSED") {
                $('td', row).remove();
            }

            var imgLink = data['Image'];
            var assetNumber = data['AssetNumber'];
            var imgTag = '<img src="' + baseUrl.appServer + 'Content/img/' + imgLink + '.jpg" id="' + assetNumber + '" data-toggle="modal" data-target="#myModal" class="images" style = "width:25px; height:25px;"/>';
            $('td:eq(11)', row).html(imgTag);
            return row;
        }
    });



    var role = $('#role').val();
    if (role == "USER" || role == "UADMIN") {
        var userId = $('#userid').val();
        var formData = {
            type: "post",
            data: { 'UserID': userId }
        };

        Permissions(formData, function (response) {
            if (response.data[4]['Permission'] == 'False') {
                //$('#excel').prop("disabled", true);
            }
        });
        GetUserLocation(formData, function (response) {
            if (response.data.length == 1) {
                $('#def').remove();
                setTimeout(function () {
                    $('#DescriptionButton').unbind().click(function () {
                        var Location1 = $("#Location").find(':selected').val();
                        var AssetSection = $("#AssetSection").find(':selected').text();
                        var AssetFloor = $("#AssetFloor").find(':selected').text();
                        var AssetRoomNo = $("#AssetRoomNo").find(':selected').text();
                        //var form = { "L1LocCode": Location, "L2LocName": AssetSection, "L3LocName": AssetRoomNo };

                        var formData = {
