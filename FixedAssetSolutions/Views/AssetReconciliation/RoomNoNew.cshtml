                        //var formData = {
                        //    type: "POST",
                        //    data: { 'L1LocCode': Location1 }
                        //};

                        ReconciliationByRoomNo(formData, function (response) {

                            $('#total').html(response.data.TotalRoom.length);
                            Table.clear().draw();
                            Table.rows.add(response.data.TotalRoom).draw();
