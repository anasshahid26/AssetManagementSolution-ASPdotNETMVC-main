                        <option value="">Demo 1</option>
                        <option value="">Demo 2</option>
                    </select>
                </div>
                <div class="col-md-6">
                    <label>Section</label>
                    <select class="form-control select1 borderfas" name="L3LocCode" id="AssetRoomNo" style="background-color: #ffffff; width:100%" required="">
