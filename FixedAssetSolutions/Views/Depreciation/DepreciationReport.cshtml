<script>
    var title = $('#title').html();
    $('.datepicker').datepicker({
        autoclose: true
    });
    $('#' + title).css('background-color', '#A2EEE6');
    $('#loader').hide();
    Table = $("#table2excel").DataTable({
        data: [],
        columns: [
             { data: 'UniqueID' },
             { data: 'AssetDescription' },
             { data: 'DepreciationDate' },
             { data: 'DepreciationDays' },
             { data: 'BookValue' },
             { data: 'NetBookValue' },
             { data: 'ValueDate' }]
        //filter: true,
        //info: false,
        //ordering: false,
        //processing: true,
        //retrieve: true
    });

    var role = $('#role').val();
    if (role == "USER" || role == "UADMIN") {
        var userId = $('#userid').val();
        var formData = {
            type: "post",
            data: { 'UserID': userId }
        };
        Permissions(formData, function (response) {
            if (response.data[15]['Permission'] == 'False') {
                //$('#excel').prop("disabled", true);
            }
        });
        GetUserLocation(formData, function (response) {
            if (response.data.length == 1) {
                $('#def').remove();
            }
            $.each(response.data, function (key, value) {
                $("#Location").append($("<option></option>").val(value.L1LocCode).html(value.L1LocName));
            });
        });
    } else {
        getLocationAdmin(function (response) {
            $.each(response.data, function (key, value) {
                $("#Location").append($("<option></option>").val(value.L1LocCode).html(value.L1LocName));
            });
        });

        $('#Location').unbind().change(function () {
            var Location1 = $("#Location").find(':selected').val();
            var formData = {
                type: "POST",
                data: { 'L1LocCode': Location1 }
            };

            ReturnDepreciationDates(formData, function (response) {
                $.each(response.data, function (key, value) {
                    $("#DepDate").append($("<option></option>").val(value.DepreciationDate).html(value.DepreciationDate));
                });
            });
        });
    }

    $('#DescriptionButton').unbind().click(function () {

        var Location = $("#Location").find(':selected').val();
        var DateOfDepreciation = $("#DepDate").find(':selected').val();
        var form = { "L1LocCode": Location, "DateOfDepreciation": DateOfDepreciation };
        var formData = {
            type: "POST",
            data: form
        };
        ReturnDepreciation(formData, function (response) {
            console.log(response);
            var total = response.data.length;
            $('#total').text(total);
            $('#loader').hide();
            $('#total').show();
            Table.clear().draw();
            Table.rows.add(response.data).draw();
        });
    });

    $('#ComputeDescription').unbind().click(function () {

        var Location = $("#Location").find(':selected').val();
        var DateOfDepreciation = $('#dateOD').val();
        var form = { "L1LocCode": Location, "DateOfDepreciation": DateOfDepreciation };
        var formData = {
            type: "POST",
            data: form
        };
        SaveDepreciation(formData, function (response) {
            var message = response.message;
            console.log(response);
        });
    });
</script>